{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": false,
        "outDir": "../../build/release",
        "rootDir": "."
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}